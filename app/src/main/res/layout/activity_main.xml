<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:id="@+id/main"
    android:background="#d5defe"
   >

    <TextView android:text="My Nano Degree Apps!"
        android:id="@+id/my_nano_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/spotify_streamer_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Spotify Streamer"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        style="@style/text"
        />


    <Button
        android:id="@+id/score_app_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="SCORES APP"
        android:layout_gravity="center_horizontal"
        style="@style/text"

        />

    <Button
        android:id="@+id/library_app_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Library app"
        android:layout_below="@+id/score_app_text_view"
        android:layout_gravity="center_horizontal"
        style="@style/text"

        />


    <Button
        android:id="@+id/build_it_bigger_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Built It bigger"
        style="@style/text"
        android:layout_gravity="center_horizontal"


        />



    <Button
        android:id="@+id/xyx_reader_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="XYZ reader"
        style="@style/text"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/capstone_text_view"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:text="Capstone: my own app"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:background="#d61a16"
        android:layout_weight="1"
        android:layout_marginBottom="50dp"

        />



</LinearLayout>
